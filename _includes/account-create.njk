
{% set theJs %}
    {% include 'admin/account.js' %}
{% endset %}
    <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                        	<!--
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            -->
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Create an account!</h1>
                                    </div>
                                       <div class="alert alert-success  d-none" role="alert" id="accountsSuccess"></div>
                                    <div class="alert alert-danger  d-none" role="alert" id="accountsDanger"></div>
            
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="inp-email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                           	<span class="text-danger d-none" id="error-email">Invalid Email Address </span>
						                    <span class="input-icon verify-icon">
						                        <img class="d-none" id="valid-email-icon" src="{{env.CDN_URL}}images/check_circle.png" alt="">
						                    </span>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user" id="inp-username" aria-describedby="usernameHelp" placeholder="Enter a username...">
                                
                                        </div>                                        
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="inp-password1" placeholder="Password">
                                            

                                            <a class="password-eye" id="show-password1" href="javascript:showPassword('inp-password1',1)">  <i class="far fa-eye"></i>
                                            </a>
                                            <a class="password-eye d-none" id="hide-password1" href="javascript:showPassword('inp-password1',1)">  <i class="far fa-eye-slash"></i>
                                            </a>
                                            <span class="text-danger d-none" id="error-password1"></span>	
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user" id="inp-password2" placeholder="Confirm password">
                                            
                                            <a class="password-eye" id="show-password2" href="javascript:showPassword('inp-password2',2)">  
                                                <i class="far fa-eye"></i>
                                            </a>
                                            <a class="password-eye d-none" id="hide-password2" href="javascript:showPassword('inp-password2',2)">  
                                                <i class="far fa-eye-slash"></i>
                                            </a>
                                            <span class="text-danger d-none" id="error-password2"></span>
                                             
                                          
                                        </div>                                        
                            
                                        <button class="btn btn-primary btn-user btn-block" id="btn-create-account">
                                            Create an account
                                        </button>
                                   
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/forgot-password/">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/login/">Login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}