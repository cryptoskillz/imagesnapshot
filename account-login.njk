---
layout: login-layout.njk
permalink: /login/
---
{% set theJs %}
{% include 'admin/account.js' %}
{% endset %}
<!-- Outer Row -->
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <!--
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            -->
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            <div class="alert alert-success  d-none" role="alert" id="accountsSuccess"></div>
                            <div class="alert alert-danger  d-none" role="alert" id="accountsDanger"></div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="inp-login-email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                                <span class="text-danger d-none" id="error-email">Invalid Email Address </span>
                                <span class="input-icon verify-icon">
                                    <img class="d-none" id="valid-email-icon" src="{{env.CDN_URL}}images/check_circle.png" alt="">
                                </span>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="password" class="form-control form-control-user" id="inp-login-password1" placeholder="Password">
                                    <div class="input-group-append">
                                        <a class="password-eye" id="show-password1" href="javascript:showPassword('inp-login-password1',1)">
                                            <i class="far fa-eye"></i>
                                        </a>
                                        <a class="password-eye d-none" id="hide-password1" href="javascript:showPassword('inp-login-password1',1)">
                                            <i class="far fa-eye-slash"></i>
                                        </a>
                                    </div>
                                </div>
                                <span class="text-danger d-none" id="error-password1"></span>
                            </div>
                            <button class="btn btn-primary btn-user btn-block" id="btn-login">
                                Login
                            </button>
                            <hr>
                            {% include 'inc_forgotpassword.njk' %}
                            {% if env.CANCREATEACCOUNT == 1 %}
                            <div class="text-center">
                                <a class="small" href="/create-account/">Create an Account!</a>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% if env.ENVIRONMENT == 'local' %}
<script type="text/javascript">
{{ theJs | safe }}
</script>
{% else %}
<script type="text/javascript">
{{ theJs | jsmin | safe }}
</script>
{% endif %}