---
layout: login-layout.njk
permalink: /reset-password/
---
{% set theJs %}
    {% include 'admin/account.js' %}
{% endset %}
    <!-- Outer Row -->


        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                        	<!--
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            -->
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Reset your Password!</h1>
                                    </div>
                                        <div class="alert alert-success  d-none" role="alert" id="accountsSuccess"></div>
                                    <div class="alert alert-danger  d-none" role="alert" id="accountsDanger"></div>
            
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="inp-password1" placeholder="Password">
                                            <span class="text-danger d-none" id="error-password1"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="inp-password2" placeholder="Confirm password">
                                            <span class="text-danger d-none" id="error-password2"></span>
                                        </div>                                        
                                      
                                        <button class="btn btn-primary btn-user btn-block" id="btn-reset-password">
                                            Reset password
                                        </button>
                                       {% if env.CANCREATEACCOUNT == 1 %}
                                    <div class="text-center">
                                        <a class="small" href="/create-account/">Create an Account!</a>
                                    </div>
                                    {%  endif %}
                                    <div class="text-center">
                                        <a class="small" href="/login/">Login!</a>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}